@model IEnumerable<Customer>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="bg-primary m-1 p-1 text-white">
    <h4>Customers</h4>
</div>

<ul class="list-group">
    @foreach (Customer customer in Model)
    {
        <li class="list-group-item">
            <div class="row">
                <div class="col-sm-3"><strong>Customer ID:</strong></div>
                <div class="col-sm-9">@customer.CustomerId</div>
            </div>
            <div class="row">
                <div class="col-sm-3"><strong>Company Name:</strong></div>
                <div class="col-sm-9">@customer.CompanyName</div>
            </div>
            <div class="row">
                <div class="col-sm-3"><strong>Address:</strong></div>
                <div class="col-sm-9">@customer.Address</div>
            </div>
            <div class="row">
                <div class="col-sm-3"><strong>City:</strong></div>
                <div class="col-sm-9">@customer.City</div>
            </div>
            <div class="row">
                <div class="col-sm-3"><strong>Region:</strong></div>
                <div class="col-sm-9">@customer.Region</div>
            </div>
            <div class="row">
                <div class="col-sm-3"><strong>Postal Code:</strong></div>
                <div class="col-sm-9">@customer.PostalCode</div>
            </div>
            <div class="row">
                <div class="col-sm-3"><strong>Country:</strong></div>
                <div class="col-sm-9">@customer.Country</div>
            </div>
            <div class="row">
                <div class="col-sm-3"><strong>Phone:</strong></div>
                <div class="col-sm-9">@customer.Phone</div>
            </div>
            <div class="row">
                <div class="col-sm-3"><strong>Fax:</strong></div>
                <div class="col-sm-9">@customer.Fax</div>
            </div>
        </li>
    }
</ul>
</ul>